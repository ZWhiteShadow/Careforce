{
  "manifest_version": 3,
  "name": "SRM Salesforce Page Hider",
  "version": "1.0",
  "description": "Hide parts of SRM Salesforce pages",
  "permissions": ["activeTab", "storage", "scripting"],
  "host_permissions": [
    "https://srm.lightning.force.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
